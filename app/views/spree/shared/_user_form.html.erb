<fieldset id="password-credentials">
  <div class="form-group">
    <%= f.email_field :email, :class => 'form-control', :placeholder => Spree.t(:email) %>
  </div>
  <hr />

<% if @user.account_type == "personal" %>
  <div id="personal_box">
    <p>
      <%= f.label :cpf, t(:cpf) %><br />
      <%= f.text_field :cpf, :class => 'title' %>
    </p>
  </div>
<% else %>
  <div id="business_box">
    <p>
      <%= f.label :cnpj, t(:cnpj) %><br />
      <%= f.text_field :cnpj, :class => 'title' %>
    </p>

    <p>
      <%= f.label :state_registry, t(:state_registry) %><br />
      <%= f.text_field :state_registry, :class => 'title' %>
    </p>

    <p>
      <%= f.label :company_name, t(:company_name) %><br />
      <%= f.text_field :company_name, :class => 'title' %>
    </p>
  </div>
<% end %>

  <div class="form-group">
    <%= f.password_field :password, :class => 'form-control', :placeholder => Spree.t(:password) %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => Spree.t(:confirm_password) %>
  </div>
</fieldset>
<div data-hook="signup_below_password_fields"></div>
